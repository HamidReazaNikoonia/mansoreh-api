  <script>
  var allPosts = [];

  function patchHoverEvent() {
              
              $('.post-module').hover(function() {
                $(this).find('.description').stop().animate({
                  height: "toggle",
                  opacity: "toggle"
                });
              });
                      }

                      
      function getPosts() {
         $.ajax({
             type:'GET',
             url: '<%=server%>/v1/posts',
             success: function(res) {
                 if(res.data) {
                    allPosts = res.data;
                     generateView();
                     setTimeout(patchHoverEvent,1000)
                 }
             },
             error: function(err) {
                 console.log(err);
             }
         })
      }

      var postsContainer = [];

      function generateView() {
        allPosts.forEach(function(post) {
